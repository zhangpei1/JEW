<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ff000000"
  >
  <TextView
      android:background="#e6e6e6"
      android:layout_width="match_parent"
      android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/unlimited"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:textColor="#666666"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="不限"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      <ImageView
          android:id="@+id/unlimited_img"
          android:layout_marginRight="6dp"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:layout_width="13dp"
          android:layout_height="7.5dp"
          android:src="@drawable/icon_selected"/>
    </RelativeLayout>
    <TextView
        android:background="#e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/low_height"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:textColor="#666666"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="由低到高"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/low_height_img"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="13dp"
            android:layout_height="7.5dp"
            android:src="@drawable/icon_selected"/>
    </RelativeLayout>
    <TextView
        android:background="#e6e6e6"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <RelativeLayout
        android:id="@+id/height_low"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:textColor="#666666"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text="由高到底"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/height_low_img"
            android:layout_marginRight="6dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="13dp"
            android:layout_height="7.5dp"
            android:src="@drawable/icon_selected"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/root_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></LinearLayout>

</LinearLayout>
